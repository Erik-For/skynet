<tbody id="players" class="text-gray-600 text-sm" is="turbo-frame" turbo-frame="players">
    <% players.each do |player| %>
        <tr class="border-b border-gray-200 hover:bg-gray-50 transition-colors">
            <td class="py-4 px-6"><%= player.UUID %></td>
            <td class="py-4 px-6 font-medium"><%= player.username %></td>
            <td class="py-4 px-6">
                <span class="px-3 py-1 rounded-full text-xs
                    <%= case player.rank.downcase
                        when 'admin' then 'bg-red-100 text-red-800'
                        when 'management' then 'bg-yellow-100 text-yellow-800'
                        when 'moderator' then 'bg-blue-100 text-blue-800'
                        when 'mvp' then 'bg-green-100 text-green-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= player.rank %>
                </span>
            </td>
            <td class="py-4 px-6"><%= player.playtime %></td>
            <td class="py-4 px-6"><%= player.first_join %></td>
            <td class="py-4 px-6"><%= player.last_seen %></td>
            <td class="py-4 px-6">
                <span class="px-3 py-1 rounded-full text-xs <%= player.banned ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>">
                    <%= player.banned ? 'Yes' : 'No' %>
                </span>
            </td>
            <td class="py-4 px-6"><%= player.nickname %></td>
        </tr>
    <% end %>
</tbody>