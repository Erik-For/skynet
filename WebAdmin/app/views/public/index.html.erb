<div class="container mx-auto p-8 bg-gray-50 min-h-screen">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Player List</h1>
        <div class="mb-6">
        <input type="text" 
               id="searchInput" 
               data-controller="search"
               placeholder="Search players..." 
               class="w-full md:w-1/3 px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        >
    </div>

    <div class="overflow-x-auto rounded-lg shadow-lg">
        <table id="playerTable" class="w-full bg-white">
            <thead>
                <tr class="bg-gray-800 text-white text-sm uppercase">
                    <%= render "public/header_item", sort: "uuid", name: "UUID", direction: "desc" %>
                    <%= render "public/header_item", sort: "username", name: "Username", direction: "desc" %>
                    <%= render "public/header_item", sort: "rank", name: "Rank", direction: "desc" %>
                    <%= render "public/header_item", sort: "playtime", name: "Playtime", direction: "desc" %>
                    <%= render "public/header_item", sort: "first_join", name: "First Join", direction: "desc" %>
                    <%= render "public/header_item", sort: "last_seen", name: "Last Seen", direction: "desc" %>
                    <%= render "public/header_item", sort: "banned", name: "Banned", direction: "desc" %>
                    <%= render "public/header_item", sort: "nickname", name: "Nickname", direction: "desc" %>
                </tr>
            </thead>
            <%= turbo_frame_tag "players" do %>
                <%= render partial: 'public/player', locals: {players: @players} %>
            <% end %>
        </table>
    </div>
</div>